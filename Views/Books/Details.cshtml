@model MVC_LMS.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Books</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Published)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserLastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserLastUpdated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateLastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateLastUpdated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Copies.Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Copies.Count)
        </dd>
    </dl>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Accession No")
                </th>
                <th>
                    @Html.DisplayName("Purchase Price")
                </th>
                <th>
                    @Html.DisplayName("IsBorrowed")
                </th>
                <th>
                    @Html.DisplayName("ISBN")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Copies)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessionNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchasePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBorrowed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Reserve" asp-route-id="@Model.ID">Reserve</a>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
